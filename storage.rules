rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // KYC documents - public read for approved documents, secure upload
    match /kyc/{userId}/{documentId} {
      allow read: if true; // Public read for KYC documents
      allow write: if request.auth != null && 
                   (request.auth.uid == userId || 
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    // Profile images and other user content
    match /users/{userId}/{fileName} {
      allow read: if true; // Public read for user content
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // System files - admin only
    match /system/{fileName} {
      allow read, write: if request.auth != null && 
                        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 